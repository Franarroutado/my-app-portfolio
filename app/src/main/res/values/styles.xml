<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="btn_regular">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/button_regular_text</item>
        <item name="android:backgroundTint">@color/button_regular</item>
    </style>

    <style name="btn_udacity" parent="btn_regular">
        <item name="android:textColor">@color/button_udacity_text</item>
        <item name="android:backgroundTint">@color/button_udacity</item>
    </style>

    <style name="mainTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">normal|bold</item>
        <item name="android:textSize">22dp</item>
        <item name="android:layout_height">38dp</item>
    </style>

    <style name="wrapperButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingBottom">30dp</item>
    </style>

</resources>
